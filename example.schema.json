{
  "type": "object",
  "properties": {
    "name": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "first_name": {
              "type": "string",
              "minLength": 1,
              "pattern": "[a-zA-Z]",
              "title": "first_name"
            },
            "last_name": {
              "type": "string",
              "minLength": 1,
              "pattern": "[a-zA-Z]",
              "title": "last_name"
            },
            "_type": {
              "type": "string",
              "const": "fullname"
            }
          },
          "additionalProperties": false,
          "required": [
            "first_name",
            "last_name",
            "_type"
          ],
          "title": "fullname"
        },
        {
          "type": "object",
          "properties": {
            "nick": {
              "type": "string",
              "minLength": 1,
              "pattern": "[a-zA-Z]",
              "title": "nick"
            },
            "_type": {
              "type": "string",
              "const": "nickname"
            }
          },
          "additionalProperties": false,
          "required": [
            "nick",
            "_type"
          ],
          "title": "nickname"
        }
      ],
      "title": "name"
    }
  },
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "title": "Hello world! input",
  "description": "Says hello :)",
  "$id": "hello-world",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}